#!/usr/bin/env node

var clientMiddleware = require("./../lib/capture/client-middleware").create();
var sessionMiddleware = Object.create(require("./../lib/session/session-middleware"));
var http = require("http");

clientMiddleware.bindToSessionMiddleware(sessionMiddleware);

http.createServer(function (req, res) {
    if (clientMiddleware.respond(req, res)) return;
    if (sessionMiddleware.respond(req, res)) return;

    res.writeHead(404);
    res.end();
}).listen(4224);